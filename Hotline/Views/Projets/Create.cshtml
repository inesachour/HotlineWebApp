@model Hotline.Models.Projet

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row" id="center">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <a asp-action="Index" asp-controller="Clients"><i class="fas fa-arrow-left fa-2x"></i></a>
            <h3>Nouveau Projet</h3>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="client" class="form-control"
                        asp-items="@(new SelectList(ViewBag.ClientsList,"Id","Login"))" required>
                    <option value="">Choisir un client</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Domaines" class="control-label"></label>
                <input class="form-control mb-1" id="domaine" name="domaine" type="hidden" />
                <span class="text-danger"></span>
            </div>

            <button id="add" type="button" class="btn btn-secondary"><i class="fas fa-plus"></i></button>
            <button id="delete" type="button" class="btn btn-secondary"><i class="fas fa-minus"></i></button>


            <div class="form-group mt-4">
                <input type="submit" value="Ajouter" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<script>
    var i = 1;
    $("#add").click(function () {
        var domaine = $('#domaine');
        var newDomaine = domaine.clone();
        newDomaine.empty();
        newDomaine.prop("name", "domaine".concat(i));
        newDomaine.prop("id", "domaine".concat(i));
        newDomaine.prop("type", "");
        i++;
        newDomaine.insertBefore(domaine);
    })
    $("#delete").click(function (){
        if (i > 1) {
            console.log("ok");
            i -= 1;
            console.log($("#domaine" + i));
            $("#domaine" + i).remove();
        }
    })
        
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
