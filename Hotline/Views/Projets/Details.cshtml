@model Hotline.Models.Projet

@{
    ViewData["Title"] = "Details";
}

<div id="center" class="mt-5">
    <a asp-action="Index" asp-controller="Clients"><i class="fas fa-arrow-left fa-2x"></i></a>

    <h3 class="text-center">Détails du projet</h3>
    <hr />
    <dl class="row mr-3 ml-3">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nom) :
        </dt>
        <dd class="col-sm-10 ml-3">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Domaines) :
        </dt>
    </dl>
    <ul>
        @foreach (var domaine in Model.Domaines)
        {

            <li class="col-sm-10 ml-2">
                @domaine.Nom
            </li>
        }
    </ul>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary mt-2" asp-action="Edit" asp-route-id="@Model.Id">Modifier</a>

    </div>
    
</div>

