@model Hotline.Models.Projet

@{
    ViewData["Title"] = "Edit";
}
<hr />
<div id="center">
    <div class="col-md-auto ml-3 mr-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <a asp-action="Index" asp-controller="Clients"><i class="fas fa-arrow-left fa-2x"></i></a>
            <h3>Modfier Projet</h3>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Domaines)
                </div>
                @foreach (var domaine in ViewBag.DomainesList)
                {
                    <table class="mb-2">
                        <tr>
                            <td style="width:200px;" class="pl-4">
                                @domaine.Nom
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-controller="Domaines" asp-action="Delete" asp-route-id="@domaine.Id" asp-route-idProjet="@Model.Id"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    </table>

                }
            </div>

            <div class="form-group">
                <input class="form-control mb-1" id="domaine" name="domaine" type="hidden" />
                <span class="text-danger"></span>
            </div>

            <button id="add" type="button" class="btn btn-secondary"><i class="fas fa-plus"></i></button>
            <button id="delete" type="button" class="btn btn-secondary"><i class="fas fa-minus"></i></button>

            <div class="form-group mt-4">
                <input type="submit" value="Enregistrer" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<script>
    var i = 1;
    $("#add").click(function () {
        var domaine = $('#domaine');
        var newDomaine = domaine.clone();
        newDomaine.empty();
        newDomaine.prop("name", "domaine".concat(i));
        newDomaine.prop("id", "domaine".concat(i));
        newDomaine.prop("type", "");
        i++;
        newDomaine.insertBefore(domaine);
    })
    $("#delete").click(function (){
        if (i > 1) {
            console.log("ok");
            i -= 1;
            console.log($("#domaine" + i));
            $("#domaine" + i).remove();
        }
    })

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
