@model Hotline.Models.User

@{
    ViewData["Title"] = "Create";
    var error = TempData["Error"] as string;
}


@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger"> @error </h2>
}
<hr />
<div class="row mt-5" id="center">
    <div class="col-md-12">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <a asp-action="Index" asp-controller="Users"><i class="fas fa-arrow-left fa-2x"></i></a>

            <h2 class="text-center">Nouveau Client</h2>

            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin" class="control-label"></label>
                <input asp-for="Admin" type="checkbox" class="form-control" />
                <span asp-validation-for="Admin" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center" >
                <input type="submit" value="Ajouter" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
