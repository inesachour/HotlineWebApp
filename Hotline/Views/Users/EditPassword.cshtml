@model Hotline.Models.User

@{
    ViewData["Title"] = "EditPassword";
    var error = TempData["Error"] as string;
}


@if (!string.IsNullOrEmpty(error))
{
    <h3 class="alert-danger"> @error </h3>
}

<div class="row p-0 border-0 mt-5" id="center">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Index"><i class="fas fa-arrow-left fa-2x"></i></a>
    }
    <div class="col-sm-4 border p-0">
        <a class="btn btn-primary btn-block mt-0 pb-0 rounded-0" style="height:15vh" asp-action="Details" asp-route-id="@Model.Id">
            Compte
        </a>
        <a class="btn btn-primary btn-block mt-0 rounded-0" style="height:15vh" asp-action="Edit" asp-route-id="@Model.Id">
            Modifier Compte
        </a>
        <button class="btn btn-light btn-block mb-0 mt-0 rounded-0" style="height:15vh" disabled>Modifier mot de passe</button>
    </div>
    <div class="col-sm-7 border">
        <div class="row mt-4">
            <div class="col-md-12">
                <form asp-action="EditPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Password" />
                    <input type="hidden" asp-for="Login" />
                    <input type="hidden" asp-for="Admin" />

                    <div class="form-group">
                        <label class="control-label">Nouveau mot de passe</label>
                        <input type="password" name="newpwd" class="form-control" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mot de passe actuel</label>
                        <input type="password" name="oldpwd" class="form-control" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Enregistrer" class="btn btn-primary mt-4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
