@model Hotline.Models.Reclamation
@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row mt-4" id="center">
    <div class="col-md-12">
        <form asp-action="Create">
            <a asp-action="Index" asp-controller="ReclamationsClient"><i class="fas fa-arrow-left fa-2x"></i></a>
            <h3 class="text-center mb-3">Faire une réclamation</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projet" class="control-label"></label>
                <select asp-for="Projet" class="form-control" id="projets"
                        asp-items="@(new SelectList(ViewBag.ProjetsList,"Id","Nom"))" required>
                    <option value="">Choisissez un Projet</option>
                </select>
                <span asp-validation-for="Projet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Domaine" class="control-label"></label>
                <select disabled class="form-control" id="domaines" asp-for="Domaine"
                        asp-items="@ViewBag.DomainesList" required>
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<script>
    //Bind dropdownlist
    $("#projets").change(function () {
        $('#domaines').prop('disabled', false);
        var id = $(this).val();
        $.getJSON("/ReclamationsClient/GetDomaines", { id: id }, function (data) {
            var item = "";
            $("#domaines").find('option').not(':first').remove();
            item += '<option value="">Choisir un domaine</option>'
            $.each(data, function (i, domaine) {
                item += '<option value="' + domaine.value + '">' + domaine.text + '</option>'
            });
            $("#domaines").html(item);
        });
    });
</script>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



