@model PaginatedList<Hotline.Models.Reclamation>

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>
                Numéro
            </th>
            <th>
                Description
            </th>
            <th class="row">
                <p>Projet</p>
                <a asp-route-sortOrder="@ViewData["ProjetSortParamAsc"]">&#9650;</a>
                <a asp-route-sortOrder="@ViewData["ProjetSortParamDesc"]">&#9660;</a>
            </th>
            <th>
                Domaine
            </th>
            <th>
                Date de soumission
            </th>
            <th>
                Statut
                <a asp-route-sortOrder="@ViewData["StatutSortParamAsc"]">&#9650;</a>
                <a asp-route-sortOrder="@ViewData["StatutSortParamDesc"]">&#9660;</a>
            </th>
            <th>
                Solution
            </th>

            <th>
                <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projet.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domaine.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSoumission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Solution)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.Numero">Details</a>

                @if (item.Statut == "Soumise")
                {
                    <button class="btn btn-danger" onclick="showInPopup('ReclamationsClient/Delete/'+@item.Numero, 'Supprimer Reclamation')"><i class="fas fa-trash"></i></button>

                }
            </td>
        </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>