@model Hotline.Models.Client

@{
    ViewData["Title"] = "Details";
}

<div >

    <div class="row p-0 border-0 mt-5" id="center">
        <div class="col-sm-4 border p-0">
            <button class="btn btn-light btn-block mb-0 rounded-0" style="height:15vh" disabled>Compte</button>
            <a class="btn btn-primary btn-block mt-0 mb-0 rounded-0 d-flex align-items-center justify-content-center" style="height:15vh" asp-action="Edit" asp-route-id="@Model.Id">
                Modifier Compte
            </a>
            <a class="btn btn-primary btn-block mt-0 mb-0 rounded-0 d-flex align-items-center justify-content-center" style="height:15vh" asp-action="EditPassword" asp-route-id="@Model.Id">
                Modifier mot de passe
            </a>
        </div>
        <div class="col-sm-7 border pl-0">
            <h3 class="text-center mt-3">Compte</h3>
            <div class="mt-3 pl-0 ml-4">
                <h3 class="text-muted">@Html.DisplayNameFor(model => model.Login) :</h3>
                <input asp-for="Login" class="form-control" disabled />
                <h3 class="text-muted mt-4">@Html.DisplayNameFor(model => model.Email) :</h3>
                <input asp-for="Email" class="form-control" disabled />
            </div>
        </div>
        <div>
     </div>
    </div>

</div>
