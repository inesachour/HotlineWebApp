@model IEnumerable<Hotline.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td style="width:250px; max-width:350px;">
                    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample-@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample-@item.Id">
                        Projets
                    </a>
                    <div class="collapse" id="collapseExample-@item.Id" >
                        @foreach (var p in ViewBag.ProjetsList)
                        {
                            
                                @if (p.Client.Id == item.Id)
                                {
                                    <div>
                                        @p.Nom
                                    
                                        <a asp-controller="Projets" asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                                        <a asp-controller="Projets" asp-action="Details" asp-route-id="@p.Id">Details</a> |
                                        <a asp-controller="Projets" asp-action="Delete" asp-route-id="@p.Id">Delete</a> |
                                    </div>

                                }
                            
                        }
                        <div>
                            
                                <a asp-controller="Projets" asp-action="Create" asp-route-id="@item.Id">+Projet</a>
                            
                        </div>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |

                </td>

            </tr>
        }
    </tbody>

</table>

